{
  "name": "sloy-html",
  "version": "2.3.1",
  "description": "sloy-html",
  "main": "index.js",
  "engines": {
    "node": ">=6.0",
    "npm": ">=3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://git.snpdev.ru/saltpepper/sloy-html"
  },
  "keywords": [
    "webpack"
  ],
  "license": "MIT",
  "scripts": {
    "start": "better-npm-run start",
    "build:staging": "yarn clean:build && better-npm-run build:staging",
    "build:production": "yarn clean:build && better-npm-run build:production",
    "lint": "yarn lint:js && yarn lint:style",
    "lint:js": "better-npm-run lint:js",
    "lint:style": "better-npm-run lint:style",
    "clean:build": "better-npm-run clean:build"
  },
  "betterScripts": {
    "start": {
      "command": "node ./src/dev-server.js",
      "env": {
        "NODE_ENV": "development",
        "APP_ENV": "development",
        "PORT": 5000
      }
    },
    "build:staging": {
      "command": "webpack --progress --hide-modules --config ./webpack",
      "env": {
        "NODE_ENV": "production",
        "APP_ENV": "staging"
      }
    },
    "build:production": {
      "command": "webpack --progress --hide-modules --config ./webpack",
      "env": {
        "NODE_ENV": "production",
        "APP_ENV": "production"
      }
    },
    "lint:js": {
      "command": "eslint --fix ./src ./tools ./index.js"
    },
    "lint:style": {
      "command": "stylelint --fix \"./src/**/*.scss\""
    },
    "clean:build": {
      "command": "node ./tools/emptyDistFolder.js"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/plugin-transform-runtime": "^7.6.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/runtime": "^7.6.2",
    "autoprefixer": "^9.4.8",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-module-resolver": "^3.1.1",
    "better-npm-run": "^0.1.0",
    "chalk": "^2.4.1",
    "css-loader": "^0.28.11",
    "eslint": "^6.5.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-import-resolver-webpack": "^0.9.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-prettier": "^3.1.0",
    "express": "^4.17.3",
    "file-loader": "^1.1.11",
    "glsl-shader-loader": "^0.1.6",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.12.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss": "^7.0.18",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.21.0",
    "stylelint": "^9.2.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.1.0",
    "stylelint-webpack-plugin": "^0.10.4",
    "url-loader": "^1.0.1",
    "webpack": "^4.39.2",
    "webpack-cli": "^3.3.7",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-hot-middleware": "^2.22.1",
    "webpack-merge": "^4.2.1"
  },
  "resolutions": {
    "webpack-sources": "^1.1.0",
    "core-js": "^3.2.1"
  },
  "dependencies": {
    "core-js": "^3.2.1",
    "fs-extra": "^8.1.0",
    "gsap": "^2.1.3",
    "postprocessing": "^6.8.0",
    "simplex-noise": "^2.4.0",
    "three": "^0.109.0",
    "three-orbitcontrols": "^2.108.1"
  }
}
